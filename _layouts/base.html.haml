!!!5
%html
  %head
    %meta{ :charset=>'utf-8' }
    %title #{site.title}
    %meta{ :name=>'viewport', :content=>'width=device-width, initial-scale=1.0' }
    %meta{ :name=>'keywords', :content=>'ingress,resistance,australia,melbourne,victoria,ballarat,geelong,bendigo,augmented reality,gps,android,mobile,exercise,game,gaming,real world,aliens,scifi' }

    %meta{ :property=>'og:title', :content=>'Ingress: Resistance Victoria, Australia.' }
    %meta{ :property=>'og:image', :content=>'http://vic.blue/images/resistance.png' }
    %meta{ :property=>'og:type', :content=>'website' }
    %meta{ :property=>'og:url', :content=>"http://vic.blue#{page.url}" }

    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"http://fonts.googleapis.com/css?family=Roboto+Slab:700,400,300,100" }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"http://fonts.googleapis.com/css?family=Roboto+Condensed:300italic,400italic,700italic,400,700,300" }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>'//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css' }

    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"/stylesheets/styles.css" }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"/stylesheets/animate.css" }

    %script{ :type=>'text/javascript', :src=>"//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js" }
    %script{ :type=>'text/javascript', :src=>"//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js" }
    %script{ :type=>'text/javascript', :src=>"/javascripts/site.js" }

    /[if lt IE 9]
      %script{ :type=>'text/javascript', :src=>'https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js' }
      %script{ :type=>'text/javascript', :src=>'https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js' }
      
    %link{ :rel=>'shortcut icon', :type=>"image/png", :href=>"#{site.base_url}/images/favicon.png" }
    %link{ :rel=>'apple-touch-icon', :type=>"image/png", :href=>"#{site.base_url}/images/favicon.png" }
  %body
    %nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %a.navbar-brand{ :href=>"/" }
            %img{ :src=>"/images/resistance48.png", :title=>"#{site.short_name}" }
          %button.navbar-toggle{:type => "button", "data-toggle" => "collapse", "data-target" => ".navbar-collapse"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li{:class=>('active' if page.url =~ /^\/ingress\//)}<
              %a{ :href=>"#{site.base_url}/ingress" } About Ingress
            %li{:class=>('active' if page.url =~ /^\/goal\//)}<
              %a{ :href=>"#{site.base_url}/goal" } Our Goal
            %li{:class=>('active' if page.url =~ /^\/comms\//)}<
              %a{ :href=>"#{site.base_url}/comms" } Communications
            %li{:class=>('active' if page.url =~ /^\/report\//)}<
              %a{ :href=>"#{site.base_url}/report" } Ingress Report
            %li{:class=>('active' if page.url =~ /^\/join\//)}<
              %a{ :href=>"#{site.base_url}/join" } Join the Resistance
            %li{:class=>('active' if page.url =~ /^\/interitus\//)}<
              %a{ :href=>"#{site.base_url}/interitus" }
                %img{ :src=>"/images/interitus18.png", :title=>"#interitus" }
                Interitus
    %section{:id => "megatron", "data-speed" => "3", "data-type" => "background"}
      .jumbotron
        .container
          %h1 #{site.title}
          %p "<span class='tagline'>#{site.tagline}</span>"
          %p
            %a.animated.bounceIn.btn.btn-default.btn-primary.btn-lg{ :href=>"#{site.base_url}/join" }
              %i.fa.fa-info-circle.fa-lg
              Join the Resistance
              %i.fa.fa-angle-double-right
    .container
      ~ content
      %hr
      %footer
        %p{ :style=>'text-align: right; font-size: 75%;' }
          Generated #{Time.now} by
          %a{ :href=>"http://awestruct.org/" } {:awestruct}
        %p{ :style=>'text-align: right; font-size: 125%;' }
          %a{ :href=>"https://plus.google.com/101002254674101161051", :rel=>"publisher" }
            %i.fa.fa-google-plus-square
          %a{ :href=>"/readme.html" }
            %i.fa.fa-question-circle

    - if site.google_analytics
      = google_analytics_universal
